<div ng-include="customSections.top" class="custom-section">
</div>
<div class="modules-list-wrapper">
    <% if(app.modules.length === 0) { %>
        <div class="k-block k-info-colored">
            <h3>There is nothing here yet.</h3>
            <p>Modules are the functional components of a web application. Start by adding your first Module in the Kendo UI Designer.</p>
        </div>
    <% } else { %>
        <% app.modules.forEach(module => { %>
            <a ng-click="onHideTooltip()" <% if (module.children.length) { %> ui-sref="module.default.<%- module.children[0].stateName %>" <% } %> <% if(module.description.length > 0) { %> title="<%- module.description %>" <%}%> class="module-thumbnail">
                <i class="fa <%- module.thumbnail.icon %>" style="background:<%- module.thumbnail.background %>; color:<%- module.thumbnail.color %>"></i>
                <h3><%- module.name %></h3>
            </a>
        <% }); %>
    <% } %>
</div>
<div ng-include="customSections.bottom" class="custom-section">
</div>
